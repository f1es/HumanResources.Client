<UserControl x:Class="HumanResources.WPF.Views.Models.VacancyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HumanResources.WPF.Views.Models"
             xmlns:vm="clr-namespace:HumanResources.WPF.ViewModels.Models"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:VacancyViewModel/>
    </UserControl.DataContext>

    <Border Height="{StaticResource ModelHeight}"
            Width="{StaticResource ModelWidth}"
            Background="White"
            CornerRadius="20">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="950"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding Vacancy.Description}"
                       Style="{StaticResource TextBlockStyle}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Grid.Column="0"
                       Margin="25,0,0,0"/>

            <WrapPanel HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Grid.Column="1"
                       Margin="25,0,0,0">

                <TextBlock Text=""
                           Style="{StaticResource TextBlockStyle}"/>

                <TextBlock Text="{Binding Vacancy.ReceiptDate}"
                           Style="{StaticResource TextBlockStyle}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Grid.Column="1"/>
            </WrapPanel>


            <Button Grid.Column="2"
                     Height="40"
                     Width="40"
                     Style="{StaticResource TransparentButtonStyle}"
                     Command="{Binding Commands[Edit]}">
                <Image Source="/Resources/Images/edit.png"/>
            </Button>

            <Button Style="{StaticResource TransparentButtonStyle}"
                    Height="40" Width="40"
                    Grid.Column="10"
                    Command="{Binding Commands[Delete]}">
                <Image Source="/Resources/Images/delete.png"/>
            </Button>

        </Grid>


    </Border>
</UserControl>
