<UserControl x:Class="HumanResources.WPF.Views.Models.WorkerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HumanResources.WPF.Views.Models"
             xmlns:vm="clr-namespace:HumanResources.WPF.ViewModels.Models"
             mc:Ignorable="d">
    
    <UserControl.DataContext>
        <vm:WorkerViewModel/>
    </UserControl.DataContext>

    <Border Height="{StaticResource ModelHeight}"
            Width="{StaticResource ModelWidth}"
            Background="White"
            CornerRadius="20">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding Worker.FirstName}"
                       Style="{StaticResource TextBlockStyle}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>

            <TextBlock Text="{Binding Worker.LastName}"
                       Style="{StaticResource TextBlockStyle}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="1"/>

            <TextBlock Text="{Binding Worker.Phone}"
                       Style="{StaticResource TextBlockStyle}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="2"/>

            <TextBlock Text="{Binding Worker.Birthday, StringFormat='{}{0:dd/MM/yyyy}'}"
                       Style="{StaticResource TextBlockStyle}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="3"/>

            <Button Grid.Column="4"
                     Height="40"
                     Width="40"
                     Style="{StaticResource TransparentButtonStyle}">
                <Image Source="/Resources/Images/edit.png"/>
            </Button>

            <Button Style="{StaticResource TransparentButtonStyle}"
                    Height="40" Width="40"
                    Grid.Column="10">
                <Image Source="/Resources/Images/delete.png"/>
            </Button>

        </Grid>


    </Border>
</UserControl>
